/dts-v1/;
/plugin/;
/ {
	compatible = "brcm,bcm2835";
	fragment@0 {
		target-path = "/";
		__overlay__ {
			input {
				compatible = "input_gpio";
				status = "okay";
				pin = <&gpio 4 0>,
				    <&gpio 5 0>,
				    <&gpio 6 0>;
			};
			output {
				compatible = "output_gpio";
				status = "okay";
				pin = <&gpio 4 0>,
				    <&gpio 5 0>,
				    <&gpio 6 0>;
			};
		};
	};
	fragment@1 {
		target = <&uart1>;	
		__overlay__ {
			serdev_echo {
				compatible = "serdev_write";
				status = "okay";
				write = "Hello from NamDHay";
			};
		};
	};
};
